      window.oc = window.oc || {};
      oc.conf = oc.conf || {};
      oc.conf.templates = oc.conf.templates || [];
      oc.conf.templates = oc.conf.templates.concat(!{JSON.stringify(templates)});
    script(src=baseUrl+'oc-client/client.js')
